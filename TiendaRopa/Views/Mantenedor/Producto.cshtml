
@{
    ViewBag.Title = "Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Matenimiento</a></li>
    <li class="breadcrumb-item active">Productos</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-boxes me-1"></i> Lista de Productos
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal()">Crear un Nuevo Producto</button>
            </div>
        </div>

        <hr />

        <table id="tabla" class="display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>Id Producto</th>
                    <th>Nombres</th>
                    <th>Descripcion</th>
                    <th>Precio</th>
                    <th>Categoria</th>
                    <th>Temporada</th>
                    <th>Stock</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <input id="txtid" type="text" value="0" hidden ="hidden"/>

                <form class="row" id="contenedor">

                    <div class="col-sm-3">
                        <div class="mb-2">
                            <img id="img_Producto" height="197" width="200" class="border rounded mx-auto d-block img-fluid" />
                        </div>
                        <div class="mb-2">
                            <input class="form-control" type="file" id="fileProducto" accept="image/png, image/jpg, image/jpeg" onchange="MostrarImagen(this)" />
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="txtnombre" name="nombre" autocomplete="off"/>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Descripcion</label>
                            <textarea type="text" class="form-control" id="txtdescripcion" name="descripcion" style="height: 125px; resize:none; "></textarea>
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label">Precio</label>
                            <input type="text" class="form-control" id="txtprecio" name="precio" autocomplete="off"/>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Categoria</label>
                            <select id="cbocategoria" class="form-select">
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Temporada</label>
                            <select id="cbotemporada" class="form-select">
                            </select>
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label">Stock</label>
                            <input type="number" class="form-control" id="txtstock" name="stock" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Estado</label>
                            <select id="cboestado" class="form-select">
                                <option value="0" selected>Seleccione</option>
                                <option value="1">Si</option>
                                <option value="2">No</option>
                            </select>
                        </div>
                    </div>

                </form>

                <!-- Mensaje de Alerta -->
                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>


@section scripts{

    <script>

        var tabledata;
        var filaseleccionada;

        function MostrarImagen( input ) {

            if (input.files) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $("#img_Producto").attr("src", e.target.result).width(200).height(197)
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        //CARGA LA TABLA
        tabledata = $("#tabla").DataTable({
            Responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListarProducto", "Mantenedor")',
                type: "GET",
                dataType: "json"
            },
            "columns": [
                { "data":"IdProducto" },
                { "data":"NombreProducto" },
                { "data":"DescripcionProducto" },
                { "data": "PrecioProducto" },
                {
                    "data": "objCategoria", "render": function (data) {
                        return data.Nombre
                    }
                },
                {
                    "data": "objTemporada", "render": function (data) {
                        return data.Nombre
                    }
                },
                { "data":"StockProducto" },
                {
                    "data": "Estado", "render": function (valor) {
                        return valor ?
                            '<span class="badge bg-success">Activo</span>' :
                            '<span class="badge bg-danger">Desactivado</span>';
                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btnEditar"> <i class="fas fa-pen"></i> </button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2 btnEliminar"> <i class="fas fa-trash"></i> </button>',
                    "ordenable": false,
                    "searchable": false,
                    "width": "90px"
                }
            ],
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/2.3.2/i18n/es-ES.json"
            }
        });

        //Desplegable de categorias
        jQuery.ajax({
            url: '@Url.Action("ListarCategoria", "Mantenedor")',
            type: "GET",
            data: null,
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {

                $("<option>").attr({ "value": "0", "disabled":"true" }).text("Seleccionar").appendTo('#cbocategoria')
                $.each(data.data, function (index, valor) {
                    $("<option>").attr({ "value": valor.Id }).text(valor.Nombre).appendTo('#cbocategoria')

                })
            },
            error: function (error) {
                console.log(error)
            },
        });

        //Desplegable de Temporadas
        jQuery.ajax({
            url: '@Url.Action("ListarTemporada", "Mantenedor")',
            type: "GET",
            data: null,
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {

                $("<option>").attr({ "value": "0", "disabled": "true" }).text("Seleccionar").appendTo('#cbotemporada')
                $.each(data.data, function (index, valor) {
                    $("<option>").attr({ "value": valor.Id_Temporada }).text(valor.Nombre).appendTo('#cbotemporada')

                })
            },
            error: function (error) {
                console.log(error)
            },
        });

        //VALIDACIONES

        jQuery.validator.addMethod("PrecioDecimal", function (value, element) {
            return this.optional(element) || /^\d{1,9}(\.\d{1,2})?$/.test(value);
        }, "Ingrese un número válido con hasta dos decimales.");

        $("#contenedor").validate({
            rules: {
                nombre: {
                    required: true
                },
                descripcion: {
                    required: true
                },
                precio: {
                    required: true,
                    PrecioDecimal: true
                },
                stock: {
                    required: true,
                    number: true
                },
            },
            messages: {
                nombre :"- El Campo nombre es obligatorio",
                descripcion: "- El Campo descripcion es obligatorio",
                precio: { required: "- El Campo precio es obligatorio", PrecioDecimal : "Ingrese un número válido con hasta dos decimales."},
                stock: { required: "- El Campo stock es obligatorio", PrecioDecimal : "Debe ingresar solo numeros en el stock"},

            },
            errorElement: "div",
            errorLabelContainer : ".alert-danger",
        })

        function abrirModal(json) {

            $("#txtid").val(0);
            $("#img_Producto").removeAttr("src");
            $("#fileProducto").val("");
            $("#txtnombre").val("");
            $("#txtdescripcion").val("");
            $("#txtprecio").val("");
            $("#cbocategoria").val($("#cbocategoria option:first").val());
            $("#cbotemporada").val($("#cbotemporada option:first").val());
            $("#txtstock").val("");
            $("#cboestado").val(0);
            $("#mensajeError").hide();

            if (json != null) {

                $("#txtid").val(json.IdProducto)
                $("#txtnombre").val(json.NombreProducto)
                $("#txtdescripcion").val(json.DescripcionProducto)
                $("#txtprecio").val(json.PrecioProducto);
                $("#cbocategoria").val(json.objCategoria.Id);
                $("#cbotemporada").val(json.objTemporada.Id_Temporada);
                $("#txtstock").val(json.StockProducto);
                $("#cboestado").val(json.Estado == true ? 1 : 2)

                jQuery.ajax({
                    url: '@Url.Action("ImagenProducto", "Mantenedor")',
                    type: "POST",
                    data: JSON.stringify({ id: json.IdProducto}),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (data.conversion) {
                            $("#img_Producto").attr({ "src": "data:image/" + data.extension + ";base64," + data.TextoBase64 });
                        }
                    },
                    error: function (error) {
                        $("#mensajeError").text("Error al mostrar la imagen");
                        $("#mensajeError").show();
                    },
                });

            }

            $("#FormModal").modal("show")
        }


        $("#tabla tbody").on("click", '.btnEditar', function () {
            filaseleccionada = $(this).closest("tr");

            var data = tabledata.row(filaseleccionada).data();

            abrirModal(data)
        })

        $("#tabla tbody").on("click", '.btnEliminar', function () {
            var ProductoSeleccionado = $(this).closest("tr");

            var data = tabledata.row(ProductoSeleccionado).data();

            swal({
                title: "¿Está seguro?",
                text: "¿Desea Eliminar el producto?",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-primary",
                confirmButtonText: "¡Sí, elimínar!",
                closeOnConfirm: true
            },
                function () {
                    jQuery.ajax({
                        url: '@Url.Action("EliminarProducto", "Mantenedor")',
                        type: "POST",
                        data: JSON.stringify({ id: data.IdProducto }),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {

                            if (data.resultado) {

                                tabledata.row(ProductoSeleccionado).remove().draw();

                            } else {
                                swal("No se Pudo Eliminar", data.Mensaje, "Error");
                            }

                        },
                        error: function (error) {
                            console.log(error)
                        },
                    });
                });
            console.log(data);

        })


        function Guardar() {

            if (!$("#contenedor").valid()) {
                return;
            }

            var imagenSeleccionada = $("#fileProducto")[0].files[0];

            var Producto = {
                IdProducto: $("#txtid").val(),
                NombreProducto: $("#txtnombre").val(),
                DescripcionProducto: $("#txtdescripcion").val(),
                PrecioProducto: $("#txtprecio").val(),
                objCategoria: {
                    id: $("#cbocategoria option:selected").val(),
                    Nombre: $("#cbocategoria option:selected").text()
                },
                objTemporada: {
                    Id_Temporada: $("#cbotemporada option:selected").val(),
                    Nombre: $("#cbotemporada option:selected").text()
                },
                StockProducto: $("#txtstock").val(),
               Estado: $("#cboestado").val() == 1 ? true : false
            }

            var request = new FormData();
            request.append("obj", JSON.stringify(Producto));
            request.append("ArchivoImg", imagenSeleccionada);

            jQuery.ajax({
                url: '@Url.Action("GuardarProducto", "Mantenedor")',
                type: "POST",
                data: request,
                processData: false,
                contentType: false,
                success: function (dato) {

                    //producto Nuevo
                    if (Producto.IdProducto == 0) {

                        if (dato.idGenerado != 0) {

                            Producto.IdProducto = dato.idGenerado;
                            tabledata.row.add(Producto).draw(false);
                            $("#FormModal").modal("hide");
                        } else {
                            $("#mensajeError").text(dato.Mensaje);
                            $("#mensajeError").show();
                        }

                    }
                    //producto Editar
                    else {
                        if (dato.OPexitosa) {

                            tabledata.row(filaseleccionada).data(Producto).draw(false);
                            filaseleccionada = null;
                            $("#FormModal").modal("hide");
                        } else {
                            $("#mensajeError").text("error ajax");
                            $("#mensajeError").show();
                        }


                    }
                },
                error: function (error) {
                    $("#mensajeError").text(dato.Mensaje);
                    $("#mensajeError").show();
                },
                beforeSend: function () {

                },
            });



        }
    </script>

}



